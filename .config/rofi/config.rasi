configuration {
	font: "mono 11";
	location: 2;
	yoffset: 0;
	xoffset: 0;
	fixed-num-lines: true;
	show-icons: true;
	cycle: false;
	sidebar-mode: true;
	hover-select: false;
	auto-select: false;
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}
