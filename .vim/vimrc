set nonumber
set autoread
set splitbelow
set splitright

runtime! ftplugin/man.vim

call plug#begin()

Plug 'tpope/vim-sensible'
Plug 'neoclide/coc.nvim', {'branch': 'release'}
Plug 'dracula/vim'

call plug#end()

let g:coc_global_extensions = [
  \'coc-json'
  \,'coc-yaml'
  \,'coc-git'
  \,'coc-clangd'
  \,'coc-explorer'
\]

colorscheme dracula

let mapleader = "t"
command! ReloadVimrc source $MYVIMRC
nnoremap <leader>r :ReloadVimrc <Enter>

command! EditVimrc edit $MYVIMRC
nnoremap <leader>e :EditVimrc <Enter>

