{
	"coc.preferences.extensionUpdateCheck": "daily",
	"coc.preferences.formatOnSave": true,
	"suggest.floatConfig": {
		"border": true,
		"rounded": true,
		"highlight": "CocFloating",
		"borderhighlight": "CocFloating"
	},
	"suggest.detailField": "preview",
	"suggest.enablePreselect": true,
	"suggest.snippetIndicator": "~",
	"suggest.snippetsSupport": true,
	"suggest.defaultSortMethod": "alphabetical",
	"diagnostic.enable": true,
	"pullDiagnostic.onChange": true,
	"diagnostic.floatConfig": {
		"border": true,
		"rounded": false
	},
	"diagnostic.hintSign": "I",
	"diagnostic.warningSign": "W",
	"diagnostic.errorSign": "E",
	"diagnostic.displayByAle": false,
	"diagnostic.autoRefresh": true,
	"diagnostic.enableMessage": "never",
	"diagnostic.virtualText": true,
	"diagnostic.virtualTextAlign": "after",
	"diagnostic.virtualTextFormat": "%message (%code)",
	"coc.preferences.renameFillCurrent": false,
	"inlayHint.enable": false,
	"hover.floatConfig": {
		"border": true,
		"borderhighlight": "CocFloating"
	},
	"hover.autoHide": true,
	"hover.previewMaxHeight": 120,
	"clangd.enabled": true,
	"clangd.checkUpdates": true
}
